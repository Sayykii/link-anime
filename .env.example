# link-anime configuration
# Copy this file to .env and edit as needed

# Container user/group IDs (match your NAS/media permissions)
PUID=977
PGID=988
TZ=Europe/Sofia

# Application password (change this!)
LA_PASSWORD=changeme

# Paths (inside container, relative to /data volume mount)
LA_DOWNLOAD_DIR=/data/downloads/complete/anime
LA_MEDIA_DIR=/data/media/anime
LA_MOVIES_DIR=/data/media/anime-movies

# qBittorrent (optional) - uses host.docker.internal to reach host services
LA_QBIT_URL=http://host.docker.internal:8080
LA_QBIT_USER=admin
LA_QBIT_PASS=
LA_QBIT_CATEGORY=anime

# Shoko Server (optional) - uses host.docker.internal to reach host services
LA_SHOKO_URL=http://host.docker.internal:8111
LA_SHOKO_APIKEY=

# Notifications (optional - Discord webhook, ntfy URL, or generic webhook)
LA_NOTIFY_URL=
